# Cache headers for static assets - Optimized for performance

# Favicon files - long cache (1 year)
/favicon.ico
  Cache-Control: public, max-age=31536000

/favicon.png
  Cache-Control: public, max-age=31536000

# Critical files - shorter cache for frequent updates
/index.html
  Cache-Control: public, max-age=3600
  Vary: Accept-Encoding

# JavaScript and CSS - long cache with immutable flag
/*.js
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

/*.css
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Fonts - very long cache (1 year)
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable

/*.otf
  Cache-Control: public, max-age=31536000, immutable

# Modern image formats - extended cache (1 year for performance)
/*.webp
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

/*.avif
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Traditional images - medium cache (3 months)
/*.png
  Cache-Control: public, max-age=7776000
  Vary: Accept-Encoding

/*.jpg
  Cache-Control: public, max-age=7776000
  Vary: Accept-Encoding

/*.jpeg
  Cache-Control: public, max-age=7776000
  Vary: Accept-Encoding

# Vector graphics and icons - long cache (6 months)
/*.svg
  Cache-Control: public, max-age=15552000
  Vary: Accept-Encoding

/*.ico
  Cache-Control: public, max-age=31536000

# Data files
/*.json
  Cache-Control: public, max-age=86400
  Vary: Accept-Encoding

/*.xml
  Cache-Control: public, max-age=86400
  Vary: Accept-Encoding

# Security and performance headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-XSS-Protection: 1; mode=block
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://fonts.googleapis.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:; frame-ancestors 'none';
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Cross-Origin-Embedder-Policy: credentialless
  Vary: Accept-Encoding, Accept